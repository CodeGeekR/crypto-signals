---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/Hero/HeroSection.astro";
import FeaturesSection from "../components/Features/FeaturesSection.astro";
import ResultsSection from "../components/Results/ResultsSection.astro";
import PricingSection from "../components/Pricing/PricingSection.astro";
import FAQSection from "../components/FAQ/FAQSection.astro";
import TestimonialsSection from "../components/Testimonials/TestimonialsSection.astro";
import ContactSection from "../components/Contact/ContactSection.astro";
import FooterSection from "../components/Footer/FooterSection.astro";
import SEO from "../components/Layout/SEO.astro";

// SEO optimizado según investigación SEMrush
const title = "Señales de trading reales + indicadores con el Bot de arbitrage Crypto";
const description =
  "Basta de estafa crypto, El Proveedor de señales trading legítimo con análisis técnico y fundamental. Los mejores indicadores institucionales Aquí!";

// Keywords SEMrush - Investigación profesional de palabras clave
const semrushKeywords = [
  "plataformas trading criptomonedas",
  "señales de trading",
  "comprar bot trading",
  "criptomonedas mas rentables",
  "bitcoin trading",
  "arbitrage crypto trading",
  "estrategia trading criptomonedas",
  "mejores indicadores trading",
  "analisis tecnico trading",
  "señales de trading en vivo gratis",
  "analisis fundamental trading",
  "institutional trading software",
  "proveedor de señales trading",
];

// Datos estructurados optimizados
const structuredData = {
  rating: 4.9,
  reviewCount: 1247,
  priceRange: "$15-$89",
  type: "service" as const,
};
---

<BaseLayout title={title} description={description}>
  <SEO
    title={title}
    description={description}
    canonical="https://cryptosenales.com"
    ogImage="/images/og-hero.jpg"
    keywords={semrushKeywords.join(", ")}
    type={structuredData.type}
    rating={structuredData.rating}
    reviewCount={structuredData.reviewCount}
    priceRange={structuredData.priceRange}
    author="CodeGeekR - CryptoSeñales Pro"
    modifiedTime={new Date().toISOString()}
  />

  <main>
    <HeroSection />
    <FeaturesSection />
    <ResultsSection />
    <PricingSection />
    <FAQSection />
    <TestimonialsSection />
    <ContactSection />
    <FooterSection />
  </main>
</BaseLayout>
