<script>
  // TypeScript interface declarations
  declare global {
    interface Window {
      gtag?: (...args: any[]) => void;
      gsap?: any;
    }
  }

  document.addEventListener("DOMContentLoaded", () => {
    // Newsletter form handling
    const newsletterForm = document.getElementById("newsletter-form");

    newsletterForm?.addEventListener("submit", async (e) => {
      e.preventDefault();

      const emailInput = (e.target as HTMLFormElement).querySelector('input[type="email"]') as HTMLInputElement;
      const submitButton = (e.target as HTMLFormElement).querySelector('button[type="submit"]') as HTMLButtonElement;
      const email = emailInput?.value;

      if (!email) return;

      const originalButtonText = submitButton.innerHTML;

      try {
        // Show loading state
        submitButton.innerHTML = `
          <div class="flex items-center justify-center">
            <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            Suscribiendo...
          </div>
        `;
        submitButton.disabled = true;

        // Track newsletter subscription
        if (typeof window.gtag === "function") {
          window.gtag("event", "newsletter_signup", {
            event_category: "engagement",
            event_label: "footer_newsletter",
            value: 1,
          });
        }

        // Simulate API call
        await new Promise((resolve) => setTimeout(resolve, 1500));

        // Show success state
        submitButton.innerHTML = "‚úÖ ¬°Suscrito!";
        submitButton.className = submitButton.className.replace(
          "from-accent-gold to-accent-green",
          "from-green-500 to-green-600"
        );

        (e.target as HTMLFormElement).reset();

        setTimeout(() => {
          alert("üéâ ¬°Gracias por suscribirte! Recibir√°s an√°lisis exclusivos y se√±ales premium.");
        }, 500);

        // Reset button after 3 seconds
        setTimeout(() => {
          submitButton.innerHTML = originalButtonText;
          submitButton.className = submitButton.className.replace(
            "from-green-500 to-green-600",
            "from-accent-gold to-accent-green"
          );
          submitButton.disabled = false;
        }, 3000);
      } catch (error) {
        console.error("Error subscribing to newsletter:", error);
        submitButton.innerHTML = "‚ùå Error";
        setTimeout(() => {
          submitButton.innerHTML = originalButtonText;
          submitButton.disabled = false;
        }, 2000);
        alert("Error al suscribirse. Por favor, int√©ntalo de nuevo.");
      }
    });

    // Social media hover animations
    const socialIcons = document.querySelectorAll(".social-icon");
    socialIcons.forEach((icon) => {
      icon.addEventListener("mouseenter", () => {
        if (typeof window.gsap !== "undefined") {
          window.gsap.to(icon, {
            duration: 0.3,
            scale: 1.15,
            rotate: 5,
            ease: "power2.out",
          });
        }
      });

      icon.addEventListener("mouseleave", () => {
        if (typeof window.gsap !== "undefined") {
          window.gsap.to(icon, {
            duration: 0.3,
            scale: 1,
            rotate: 0,
            ease: "power2.out",
          });
        }
      });
    });

    // Footer links hover animations
    const footerLinks = document.querySelectorAll(".footer-link");
    footerLinks.forEach((link) => {
      link.addEventListener("mouseenter", () => {
        if (typeof window.gsap !== "undefined") {
          const chevron = link.querySelector("svg");
          window.gsap.to(chevron, {
            duration: 0.2,
            x: 4,
            ease: "power2.out",
          });
        }
      });

      link.addEventListener("mouseleave", () => {
        if (typeof window.gsap !== "undefined") {
          const chevron = link.querySelector("svg");
          window.gsap.to(chevron, {
            duration: 0.2,
            x: 0,
            ease: "power2.out",
          });
        }
      });
    });

    // GSAP ScrollTrigger animations for footer sections
    if (typeof window.gsap !== "undefined" && window.gsap.ScrollTrigger) {
      const { gsap } = window;

      // Animate newsletter section
      gsap.from("[data-newsletter-section]", {
        duration: 1,
        y: 50,
        opacity: 0,
        ease: "power2.out",
        scrollTrigger: {
          trigger: "[data-newsletter-section]",
          start: "top 85%",
        },
      });

      // Animate footer sections with stagger
      gsap.from("[data-company-info], [data-footer-links]", {
        duration: 0.8,
        y: 30,
        opacity: 0,
        stagger: 0.1,
        ease: "power2.out",
        scrollTrigger: {
          trigger: "[data-company-info]",
          start: "top 85%",
        },
      });

      // Animate social icons
      gsap.from("[data-social-links] .social-icon", {
        duration: 0.6,
        scale: 0,
        rotation: 180,
        stagger: 0.1,
        ease: "back.out(1.7)",
        scrollTrigger: {
          trigger: "[data-social-links]",
          start: "top 85%",
        },
      });

      // Animate security badges
      gsap.from("[data-security-badges] > div", {
        duration: 0.6,
        x: 20,
        opacity: 0,
        stagger: 0.1,
        ease: "power2.out",
        scrollTrigger: {
          trigger: "[data-footer-bottom]",
          start: "top 90%",
        },
      });
    }
  });
</script>
