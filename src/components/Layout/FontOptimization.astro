<!-- ðŸ“± OptimizaciÃ³n de carga de fuentes responsiva -->
<style is:global>
  /* ðŸŽ¯ Sistema de fuentes con fallbacks optimizados para reducir CLS */
  :root {
    /* Variables de fuentes con fallbacks calculados */
    --font-inter: "Inter", "Inter-fallback", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    --font-space-grotesk:
      "Space Grotesk", "Space-Grotesk-fallback", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;

    /* MÃ©tricas optimizadas para evitar layout shift */
    --font-inter-adjust: 107.4%;
    --font-grotesk-adjust: 115%;
  }

  /* ðŸš€ Fuente base del sistema para renderizado inmediato (sin bloqueo) */
  html {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-display: swap;
    text-rendering: optimizeSpeed;
  }

  /* âš¡ OptimizaciÃ³n de renderizado de texto */
  body {
    font-family: var(--font-inter);
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-feature-settings:
      "kern" 1,
      "liga" 1;
  }

  /* ðŸŽ¨ Fuente hero optimizada */
  .font-hero {
    font-family: var(--font-space-grotesk);
    font-display: swap;
  }

  /* ðŸ“Š Fuentes pre-calculadas para evitar layout shift */
  @font-face {
    font-family: "Inter-fallback";
    src: local("BlinkMacSystemFont"), local("Segoe UI"), local("Roboto"), local("Arial");
    ascent-override: 90.2%;
    descent-override: 22.48%;
    line-gap-override: 0%;
    size-adjust: var(--font-inter-adjust);
  }

  @font-face {
    font-family: "Space-Grotesk-fallback";
    src: local("BlinkMacSystemFont"), local("Segoe UI"), local("Helvetica Neue"), local("Arial");
    ascent-override: 77%;
    descent-override: 20%;
    line-gap-override: 0%;
    size-adjust: var(--font-grotesk-adjust);
  }

  /* ðŸŽ¯ Estados de carga de fuentes para mejor UX */
  .fonts-loading {
    visibility: hidden;
  }

  .fonts-loaded body {
    font-family: var(--font-inter);
  }

  .fonts-loaded .font-hero {
    font-family: var(--font-space-grotesk);
  }

  .fonts-failed body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  }

  .fonts-failed .font-hero {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    font-weight: 600;
  }

  /* ðŸ“± Optimizaciones responsive para performance */
  @media (max-width: 768px) {
    body {
      text-rendering: optimizeSpeed; /* Priorizar velocidad en mobile */
    }
  }

  @media (prefers-reduced-motion: reduce) {
    * {
      transition: none !important;
      animation: none !important;
    }
  }

  /* ðŸŽ¨ OptimizaciÃ³n de subpixel rendering */
  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    body {
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
  }
</style>

<!-- ðŸš€ Script de carga optimizada de fuentes (no bloquea renderizado) -->
<script is:inline>
  (function () {
    "use strict";

    // âš¡ Variables de configuraciÃ³n
    const FONT_CACHE_KEY = "cryptosenales-fonts-v2";
    const FONT_TIMEOUT = 3000; // 3 segundos timeout
    const STORAGE_KEY = "fonts-loaded-timestamp";
    const CACHE_DURATION = 86400000; // 24 horas en ms

    // ðŸŽ¯ Verificar cachÃ© de fuentes
    function areFontsCached() {
      try {
        const timestamp = localStorage.getItem(STORAGE_KEY);
        if (!timestamp) return false;

        const now = Date.now();
        const cacheTime = parseInt(timestamp, 10);

        // Verificar si el cachÃ© sigue vÃ¡lido (24 horas)
        return now - cacheTime < CACHE_DURATION;
      } catch (e) {
        return false;
      }
    }

    // ðŸ’¾ Guardar estado de fuentes cargadas
    function markFontsAsLoaded() {
      try {
        localStorage.setItem(STORAGE_KEY, Date.now().toString());
        sessionStorage.setItem(FONT_CACHE_KEY, "true");
      } catch (e) {
        // Silently fail for users with disabled storage
      }
    }

    // ðŸŽ¨ Aplicar clase de fuentes cargadas
    function applyLoadedFonts() {
      const html = document.documentElement;
      html.classList.remove("fonts-loading", "fonts-failed");
      html.classList.add("fonts-loaded");

      // ðŸ“Š Performance mark para mÃ©tricas
      if ("performance" in window && performance.mark) {
        performance.mark("fonts-loaded");
      }
    }

    // âŒ Manejar error de carga de fuentes
    function handleFontError() {
      const html = document.documentElement;
      html.classList.remove("fonts-loading");
      html.classList.add("fonts-failed");

      // ðŸ“Š Performance mark para debug
      if ("performance" in window && performance.mark) {
        performance.mark("fonts-failed");
      }
    }

    // ðŸš€ FunciÃ³n principal de carga de fuentes
    function loadFonts() {
      // Verificar si las fuentes ya estÃ¡n en cachÃ©
      if (areFontsCached()) {
        applyLoadedFonts();
        return;
      }

      // Verificar soporte de Font Loading API
      if (!("fonts" in document)) {
        // Fallback para navegadores sin soporte
        setTimeout(applyLoadedFonts, 100);
        return;
      }

      // Marcar inicio de carga
      document.documentElement.classList.add("fonts-loading");

      // ðŸ“ Definir fuentes crÃ­ticas a cargar
      const fontsToLoad = [
        // Inter (fuente principal)
        "400 1em Inter",
        "500 1em Inter",
        "600 1em Inter",
        "700 1em Inter",

        // Space Grotesk (fuente hero)
        '500 1em "Space Grotesk"',
        '600 1em "Space Grotesk"',
        '700 1em "Space Grotesk"',
      ];

      // â±ï¸ Timeout de seguridad
      const timeoutId = setTimeout(() => {
        handleFontError();
      }, FONT_TIMEOUT);

      // ðŸŽ¯ Cargar fuentes de forma asÃ­ncrona
      const fontPromises = fontsToLoad.map((font) => {
        return document.fonts.load(font).catch(() => {
          // Silently fail individual fonts
          return null;
        });
      });

      // âœ… Procesar resultados de carga
      Promise.allSettled(fontPromises)
        .then((results) => {
          clearTimeout(timeoutId);

          // Verificar si al menos algunas fuentes se cargaron
          const successCount = results.filter((r) => r.status === "fulfilled" && r.value).length;

          if (successCount > 0) {
            applyLoadedFonts();
            markFontsAsLoaded();

            // ðŸ“Š MÃ©tricas de performance opcional
            if (window.gtag) {
              gtag("event", "fonts_loaded", {
                custom_parameter: successCount,
                event_category: "Performance",
              });
            }
          } else {
            handleFontError();
          }
        })
        .catch(() => {
          clearTimeout(timeoutId);
          handleFontError();
        });
    }

    // ðŸš€ Inicializar carga de fuentes
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", loadFonts);
    } else {
      loadFonts();
    }

    // ðŸ”„ Escuchar cambios de visibilidad para optimizar recursos
    if ("hidden" in document) {
      document.addEventListener("visibilitychange", function () {
        if (!document.hidden && !document.documentElement.classList.contains("fonts-loaded")) {
          loadFonts();
        }
      });
    }
  })();
</script>

