<script>
  // Script optimizado para el men칰 m칩vil con cierre autom치tico
  function initMobileMenu() {
    const mobileMenuBtn = document.getElementById("mobile-menu-btn") as HTMLButtonElement;
    const mobileMenu = document.getElementById("mobile-menu") as HTMLDivElement;
    const menuIcon = mobileMenuBtn?.querySelector(".menu-icon") as SVGElement;
    const closeIcon = mobileMenuBtn?.querySelector(".close-icon") as SVGElement;

    if (!mobileMenuBtn || !mobileMenu) {
      return;
    }

    let isOpen = false;

    function openMenu() {
      isOpen = true;

      // Mostrar men칰 con animaciones
      mobileMenu.style.transform = "translateY(0)";
      mobileMenu.style.opacity = "1";
      mobileMenu.style.visibility = "visible";
      mobileMenu.setAttribute("data-state", "open");

      // Cambiar iconos con transici칩n suave
      if (menuIcon && closeIcon) {
        menuIcon.style.opacity = "0";
        setTimeout(() => {
          menuIcon.style.display = "none";
          closeIcon.style.display = "block";
          closeIcon.style.opacity = "1";
        }, 100);
      }

      // Prevenir scroll del body
      document.body.style.overflow = "hidden";
      document.body.classList.add("menu-open");

      // Actualizar aria
      mobileMenuBtn.setAttribute("aria-expanded", "true");
      mobileMenuBtn.setAttribute("aria-label", "Cerrar men칰 de navegaci칩n");
    }

    function closeMenu() {
      isOpen = false;

      // Ocultar men칰 con animaciones
      mobileMenu.style.transform = "translateY(-100%)";
      mobileMenu.style.opacity = "0";
      mobileMenu.style.visibility = "hidden";
      mobileMenu.setAttribute("data-state", "closed");

      // Cambiar iconos con transici칩n suave
      if (menuIcon && closeIcon) {
        closeIcon.style.opacity = "0";
        setTimeout(() => {
          closeIcon.style.display = "none";
          menuIcon.style.display = "block";
          menuIcon.style.opacity = "1";
        }, 100);
      }

      // Restaurar scroll del body
      document.body.style.overflow = "";
      document.body.classList.remove("menu-open");

      // Actualizar aria
      mobileMenuBtn.setAttribute("aria-expanded", "false");
      mobileMenuBtn.setAttribute("aria-label", "Abrir men칰 de navegaci칩n");
    }

    function toggleMenu() {
      if (isOpen) {
        closeMenu();
      } else {
        openMenu();
      }
    }

    function smoothScrollToSection(targetId: string) {
      const targetElement = document.getElementById(targetId);
      if (targetElement) {
        const headerHeight = 80;
        const targetPosition = targetElement.offsetTop - headerHeight;
        window.scrollTo({
          top: targetPosition,
          behavior: "smooth",
        });
      }
    }

    // Event listener para el bot칩n
    mobileMenuBtn.addEventListener("click", function (e: Event) {
      e.preventDefault();
      e.stopPropagation();
      toggleMenu();
    });

    // Cerrar men칰 autom치ticamente al hacer click en CUALQUIER enlace
    const allMenuLinks = mobileMenu.querySelectorAll("a") as NodeListOf<HTMLAnchorElement>;
    allMenuLinks.forEach((link) => {
      link.addEventListener("click", function (e: Event) {
        const href = this.getAttribute("href");

        if (href && href.startsWith("#")) {
          e.preventDefault();

          // Cerrar men칰 inmediatamente
          closeMenu();

          // Scroll suave despu칠s de un peque침o delay para la animaci칩n
          setTimeout(() => {
            const targetId = href.substring(1);
            smoothScrollToSection(targetId);
          }, 200);
        } else {
          // Para enlaces externos, simplemente cerrar el men칰
          closeMenu();
        }
      });
    });

    // Tambi칠n cerrar al hacer click en el bot칩n Lista VIP desde m칩vil
    const signupBtn = document.getElementById("signup-btn");
    if (signupBtn) {
      signupBtn.addEventListener("click", function (e: Event) {
        if (isOpen) {
          e.preventDefault();
          closeMenu();

          // Scroll a la secci칩n de contacto
          setTimeout(() => {
            smoothScrollToSection("contact");
          }, 200);
        }
      });
    }

    // Cerrar con ESC
    document.addEventListener("keydown", function (e: KeyboardEvent) {
      if (e.key === "Escape" && isOpen) {
        closeMenu();
      }
    });

    // Cerrar al hacer click fuera del men칰
    document.addEventListener("click", function (e: Event) {
      const target = e.target as HTMLElement;
      if (isOpen && !mobileMenu.contains(target) && !mobileMenuBtn.contains(target)) {
        closeMenu();
      }
    });

    // Cerrar autom치ticamente en resize a desktop
    window.addEventListener("resize", function () {
      if (window.innerWidth >= 1024 && isOpen) {
        closeMenu();
      }
    });
  }

  // Inicializar cuando el DOM est칠 listo
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initMobileMenu);
  } else {
    initMobileMenu();
  }

  // Tambi칠n para navegaci칩n de Astro
  document.addEventListener("astro:page-load", function () {
    setTimeout(initMobileMenu, 100);
  });
</script>
