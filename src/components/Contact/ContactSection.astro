                <MapPin className="w-6 h-6 text-accent-blue" />
              </div>
              <div>
                <h4 class="font-semibold mb-1">Ubicaci√≥n</h4>
                <p class="text-gray-300">
                  Madrid, Espa√±a<br />
                  Calle Gran V√≠a 123
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Social Links -->
        <div class="card-glass p-8 rounded-2xl">
          <h3 class="text-2xl font-bold mb-6">S√≠guenos</h3>
          <div class="flex space-x-4">
            <a href="#" class="w-12 h-12 bg-white/5 rounded-xl flex items-center justify-center hover:bg-white/10 transition-colors">
              <span class="text-2xl">ùïè</span>
            </a>
            <a href="#" class="w-12 h-12 bg-white/5 rounded-xl flex items-center justify-center hover:bg-white/10 transition-colors">
              <span class="text-xl">üì±</span>
