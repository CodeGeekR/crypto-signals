<script>
  // 游 Estrategia de carga diferida para scripts no cr칤ticos (part칤culas)
  // Esto reduce dr치sticamente el "Total Blocking Time" (TBT) y mejora el TTI.

  // 1. Definimos la funci칩n que cargar치 e inicializar치 el script.
  const loadAndInitParticles = () => {
    // Usamos requestIdleCallback para asegurar que la ejecuci칩n pesada
    // solo ocurra cuando el hilo principal est칠 libre.
    if ("requestIdleCallback" in window) {
      requestIdleCallback(() => {
        import("../../scripts/particles.ts")
          .then(({ initParticleSystem }) => {
            initParticleSystem();
          })
          .catch(() => {
            // Fallback: continue without particles
          });
      });
    } else {
      // Fallback para navegadores antiguos.
      setTimeout(() => {
        import("../../scripts/particles.ts")
          .then(({ initParticleSystem }) => {
            initParticleSystem();
          })
          .catch(() => {
            // Fallback: continue without particles
          });
      }, 2000); // Retraso significativo para no bloquear la carga.
    }
  };

  // 2. Creamos un listener de interacci칩n que se ejecuta UNA SOLA VEZ.
  // El script de part칤culas no se descargar치 hasta que el usuario interact칰e.
  const interactions = ["scroll", "mousemove", "touchstart"];
  const options = { once: true, passive: true };

  interactions.forEach((event) => {
    document.addEventListener(event, loadAndInitParticles, options);
  });
</script>

<style>
  .particle-container {
    pointer-events: none;
  }

  .crypto-particles {
    pointer-events: all;
  }
</style>
