<div class="particle-container absolute inset-0 overflow-hidden">
  <div class="crypto-particles absolute inset-0">
    <!-- Canvas will be created by JavaScript -->
  </div>

  <div class="absolute inset-0 opacity-10">
    <div
      class="grid-pattern w-full h-full"
      style="
      background-image:
        linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px);
      background-size: 50px 50px;
    "
    >
    </div>
  </div>
</div>

<script>
  import { initParticleSystem } from "../../scripts/particles.ts";
  document.addEventListener("DOMContentLoaded", () => {
    initParticleSystem();
  });
</script>

<style>
  .particle-container {
    pointer-events: none;
  }

  .crypto-particles {
    pointer-events: all;
  }
</style>
