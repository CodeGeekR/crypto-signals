---
import ParticleBackground from './ParticleBackground.astro';
import TypewriterText from './TypewriterText.astro';
import CTAButtons from './CTAButtons.astro';
---

<section
  id="hero"
  class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-hero"
>
  <ParticleBackground />

  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-primary-900/20 to-primary-900/60"></div>
  <div class="absolute inset-0 bg-gradient-to-r from-primary-900/30 via-transparent to-primary-900/30"></div>

  <div class="relative container mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="max-w-6xl mx-auto flex flex-col items-center justify-center gap-16">
      <!-- Early Access Badge -->
      <div
        class="hero-badge inline-flex items-center bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-6 py-3 opacity-0 -mt-32"
        data-aos="fade-down"
      >
        <span class="w-2 h-2 bg-accent-green rounded-full mr-3 animate-pulse"></span>
        <span class="text-sm font-medium text-white">
          🚀 Early Access - Únete a +10,000 traders profesionales
        </span>
      </div>

      <div class="space-y-8">
        <!-- Title and Content -->
        <div class="space-y-6">
          <h1 class="hero-title opacity-0">
            <span class="block font-hero text-6xl md:text-7xl lg:text-8xl font-bold leading-none tracking-tight">
              El <span class="text-gradient">Futuro</span> del
            </span>
            <span class="block font-hero text-6xl md:text-7xl lg:text-8xl font-bold leading-none tracking-tight mt-2">
              Trading <span class="text-accent-gold">Crypto</span>
            </span>
          </h1>

          <div class="hero-subtitle opacity-0">
            <TypewriterText />
          </div>

          <p class="hero-description text-xl md:text-2xl text-gray-300 max-w-4xl mx-auto leading-relaxed opacity-0">
            Señales de trading institucionales impulsadas por <span class="text-accent-green font-semibold">Inteligencia Artificial</span>
            para maximizar tus ganancias en el mercado cripto más volátil de la historia.
          </p>
        </div>

        <!-- Metrics -->
        <div class="hero-metrics flex flex-wrap justify-center gap-8 md:gap-12 opacity-0">
          <div class="metric-item text-center">
            <div class="text-3xl md:text-4xl font-bold text-accent-green mb-2">89.7%</div>
            <div class="text-sm text-gray-400 uppercase tracking-wide">Precisión IA</div>
          </div>
          <div class="metric-item text-center">
            <div class="text-3xl md:text-4xl font-bold text-accent-gold mb-2">24/7</div>
            <div class="text-sm text-gray-400 uppercase tracking-wide">Análisis Live</div>
          </div>
          <div class="metric-item text-center">
            <div class="text-3xl md:text-4xl font-bold text-accent-blue mb-2">+347%</div>
            <div class="text-sm text-gray-400 uppercase tracking-wide">ROI Promedio</div>
          </div>
        </div>

        <!-- CTA and Scroll Indicator -->
        <div class="space-y-12">
          <CTAButtons />

          <div class="hero-scroll opacity-0 absolute bottom-8 left-1/2 -translate-x-1/2">
            <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center mx-auto">
              <div class="w-1 h-3 bg-white/60 rounded-full mt-2 animate-bounce"></div>
            </div>
            <p class="text-xs text-white/60 mt-2">Desliza para explorar</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { initHeroAnimations } from '../../scripts/animations';
  document.addEventListener('DOMContentLoaded', () => {
    initHeroAnimations();
  });
</script>