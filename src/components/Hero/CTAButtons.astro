</div>

<!-- Optimized JavaScript - Reduced complexity -->
<script>
  // Simplified animation system - No external dependencies
  document.addEventListener("DOMContentLoaded", () => {
    // Immediate CSS-based animations
    const heroSection = document.querySelector(".hero-cta") as HTMLElement;
    if (heroSection) {
      heroSection.style.opacity = "1";
      heroSection.style.transform = "translateY(0)";
    }

    // CTA click handlers
    const primaryCTA = document.querySelector('[data-cta="primary"]');

    if (primaryCTA) {
      primaryCTA.addEventListener("click", () => {
        // Track conversion event
        if (typeof (window as any).gtag !== "undefined") {
          (window as any).gtag("event", "cta_click", {
            event_category: "engagement",
            event_label: "primary_cta",
            value: 1,
          });
        }

        // Smooth scroll to contact section
        const contactSection = document.getElementById("contact");
        if (contactSection) {
          contactSection.scrollIntoView({
            behavior: "smooth",
            block: "start",
          });
        }
      });
    }

    // Lazy load advanced animations only if needed
    let advancedAnimationsLoaded = false;

    const loadAdvancedAnimations = () => {
      if (advancedAnimationsLoaded) return;
      advancedAnimationsLoaded = true;

      // Use requestIdleCallback for non-critical animations
      if ("requestIdleCallback" in window) {
        window.requestIdleCallback(() => {
          // Simple stagger animation for cards
          const cards = document.querySelectorAll(".feature-card, .benefit-card");
          cards.forEach((card, index) => {
            setTimeout(() => {
              (card as HTMLElement).style.opacity = "1";
              (card as HTMLElement).style.transform = "translateY(0)";
            }, index * 100);
          });
        });
      }
    };

    // Load animations on user interaction
    const interactionEvents = ["scroll", "mousemove", "touchstart"];
    interactionEvents.forEach((event) => {
      document.addEventListener(event, loadAdvancedAnimations, { once: true, passive: true });
    });
  });
</script>

<style>
  /* Optimized styles - Reduced complexity */
  .feature-card {
    @apply bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-5 transition-all duration-500;
    opacity: 1; /* Visible by default */
  }

  .feature-content {
    @apply flex items-center space-x-4;
  }

  .feature-icon {
    @apply w-12 h-12 bg-gradient-to-br from-primary-700 to-primary-600 rounded-xl flex items-center justify-center flex-shrink-0;
  }

  .feature-text {
    @apply flex-1;
  }

  /* Benefit Cards - Simplified */
  .benefit-card {
    @apply bg-gradient-to-br from-primary-800/30 to-primary-700/30 backdrop-blur-sm border border-white/10 rounded-2xl p-6 transition-all duration-500;
    opacity: 1; /* Visible by default */
  }

  .benefit-content {
    @apply flex items-start space-x-4;
  }

  .benefit-icon {
    @apply w-12 h-12 bg-gradient-to-br from-accent-blue/20 to-accent-green/20 border border-accent-blue/30 rounded-xl flex items-center justify-center flex-shrink-0 mt-1;
  }

  .benefit-text {
    @apply flex-1;
  }

  /* Advanced Features Info */
  .advanced-features-info {
    @apply w-full;
    opacity: 1; /* Visible by default */
  }

  .info-content {
    @apply bg-gradient-to-r from-primary-800/20 via-primary-700/30 to-primary-800/20 backdrop-blur-sm border border-white/10 rounded-2xl p-6 text-center;
  }

  .info-dot {
    @apply w-2 h-2 bg-accent-green rounded-full animate-pulse flex-shrink-0;
  }

  /* CTA Button optimizations */
  .cta-primary {
    position: relative;
    overflow: hidden;
  }

  .cta-primary::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .cta-primary:hover::before {
    left: 100%;
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .hero-cta {
      @apply max-w-sm;
    }

    .feature-content,
    .benefit-content {
      @apply space-x-3;
    }

    .feature-icon,
    .benefit-icon {
      @apply w-10 h-10;
    }

    .feature-text h3,
    .benefit-text h3 {
      @apply text-xs;
    }

    .feature-text p,
    .benefit-text p {
      @apply text-xs;
    }

    .grid {
      @apply gap-6;
    }
  }

  /* Enhanced spacing */
  #pre-cta-section {
    margin-bottom: 3rem;
  }

  #post-cta-section {
    margin-top: 3rem;
  }

  @media (min-width: 640px) {
    #pre-cta-section {
      margin-bottom: 4rem;
    }

    #post-cta-section {
      margin-top: 4rem;
    }
  }
</style>
