<script is:inline>
  // Global variables for Motion library
  window.Motion = window.Motion || null;
  window.gtag = window.gtag || null;

  // Motion library loader with fallback
  async function loadMotion() {
    try {
      const motion = await import("https://cdn.jsdelivr.net/npm/motion@11.13.5/+esm");
      window.Motion = {
        animate: motion.animate,
        stagger: motion.stagger,
      };
      return true;
    } catch (error) {
      return false;
    }
  }

  document.addEventListener("DOMContentLoaded", async () => {
    // Load Motion library
    const motionLoaded = await loadMotion();

    // Initialize animations
    if (motionLoaded) {
      initMotionAnimations();
    } else {
      initCSSFallbackAnimations();
    }

    // Initialize interactions
    initCTAInteractions();
  });

  function initMotionAnimations() {
    const { animate, stagger } = window.Motion;

    // Animate feature cards with stagger
    const featureCards = document.querySelectorAll(".feature-card");
    if (featureCards.length > 0) {
      animate(
        featureCards,
        {
          opacity: [0, 1],
          y: [30, 0],
          scale: [0.95, 1],
        },
        {
          delay: stagger(0.2, { start: 1.2 }),
          duration: 0.8,
          easing: "ease-out",
        }
      );
    }

    // Animate benefit cards with stagger
    const benefitCards = document.querySelectorAll(".benefit-card");
    if (benefitCards.length > 0) {
      animate(
        benefitCards,
        {
          opacity: [0, 1],
          y: [20, 0],
        },
        {
          delay: stagger(0.3, { start: 2.0 }),
          duration: 0.7,
          easing: "ease-out",
        }
      );
    }

    // Animate advanced features info
    const advancedInfo = document.querySelector(".advanced-features-info");
    if (advancedInfo) {
      animate(
        advancedInfo,
        {
          opacity: [0, 1],
          y: [15, 0],
        },
        {
          delay: 2.8,
          duration: 0.6,
          easing: "ease-out",
        }
      );
    }

    // Animate social proof
    const socialProof = document.querySelector(".social-proof-section");
    if (socialProof) {
      animate(
        socialProof,
        {
          opacity: [0, 1],
          y: [10, 0],
        },
        {
          delay: 3.2,
          duration: 0.8,
          easing: "ease-out",
        }
      );
    }
  }

  function initCSSFallbackAnimations() {
    // CSS-based stagger animation fallback
    const allElements = document.querySelectorAll(
      ".feature-card, .benefit-card, .advanced-features-info, .social-proof-section"
    );

    allElements.forEach((element, index) => {
      element.style.opacity = "0";
      element.style.transform = "translateY(20px)";
      element.style.transition = "all 0.8s ease-out";

      setTimeout(
        () => {
          element.style.opacity = "1";
          element.style.transform = "translateY(0)";
        },
        1200 + index * 200
      );
    });
  }

  function initCTAInteractions() {
    const waitlistBtn = document.getElementById("cta-waitlist");

    // CTA button click handler (solo el botÃ³n principal debe tener interacciones)
    waitlistBtn?.addEventListener("click", (e) => {
      e.preventDefault();

      // Button click animation
      if (window.Motion) {
        window.Motion.animate(waitlistBtn, { scale: [1, 0.95, 1] }, { duration: 0.2 });
      }

      // Scroll to contact section
      const contactSection = document.getElementById("contact");
      if (contactSection) {
        const headerElement = document.querySelector(".header-main");
        const headerHeight = headerElement?.offsetHeight || 80;
        const targetPosition = contactSection.offsetTop - headerHeight;

        window.scrollTo({
          top: targetPosition,
          behavior: "smooth",
        });

        // Track analytics
        if (typeof window.gtag === "function") {
          window.gtag("event", "cta_click", {
            event_category: "engagement",
            event_label: "institutional_trading_access",
            event_content: "seÃ±ales_trading_gratis",
            value: 1,
          });
        }
      }
    });
  }
</script>

