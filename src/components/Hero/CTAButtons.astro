<div
  class="hero-cta flex flex-col items-center justify-center w-full max-w-2xl mx-auto animate-slide-up"
  style="animation-delay: 0.8s;"
>
  <!-- Pre-CTA Features Section - Ultra Optimizado -->
  <div id="pre-cta-section" class="w-full mb-12">
    <!-- Section Title -->
    <div class="text-center mb-8">
      <h2 class="text-sm text-gray-400 uppercase tracking-wider font-medium text-balance">
        Tecnología Institucional Disponible
      </h2>
    </div>

    <!-- Features Grid - SVGs Ultra Simplificados -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-lg mx-auto">
      <!-- Feature 1 - Chart Analysis (SVG simplificado) -->
      <div class="feature-card">
        <div class="feature-content">
          <div class="feature-icon">
            <!-- SVG ultra simplificado - solo 3 paths en lugar de 8 -->
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              class="text-accent-green"
            >
              <path d="M3 3v18h18M9 13l4-4 4 4"></path>
              <circle cx="9" cy="13" r="1"></circle>
              <circle cx="13" cy="9" r="1"></circle>
              <circle cx="17" cy="13" r="1"></circle>
            </svg>
          </div>
          <div class="feature-text">
            <h3 class="text-sm font-semibold text-white mb-1 text-balance">Análisis Técnico</h3>
            <p class="text-xs text-gray-400 text-balance">Trading Profesional</p>
          </div>
        </div>
      </div>

      <!-- Feature 2 - Bitcoin Trading (SVG simplificado) -->
      <div class="feature-card">
        <div class="feature-content">
          <div class="feature-icon">
            <!-- SVG ultra simplificado - solo 2 paths en lugar de 7 -->
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              class="text-accent-gold"
            >
              <path d="M6 6h8a3 3 0 0 1 0 6a3 3 0 0 1 0 6H6V6z"></path>
              <path d="M8 6v12M8 12h6M9 3v3M13 3v3M9 18v3M13 18v3"></path>
            </svg>
          </div>
          <div class="feature-text">
            <h3 class="text-sm font-semibold text-white mb-1 text-balance">Bitcoin Trading</h3>
            <p class="text-xs text-gray-400 text-balance">Institucional</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Primary CTA Button - Optimizado -->
  <div class="w-full flex flex-col items-center space-y-4 mb-8">
    <button
      class="cta-primary group relative w-full max-w-md bg-gradient-to-r from-accent-red to-accent-gold hover:from-accent-gold hover:to-accent-red text-white font-bold py-4 px-8 rounded-2xl shadow-2xl hover:shadow-accent-red/25 transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-4 focus:ring-accent-red/50"
      data-cta="primary"
      aria-label="Acceder a señales de trading gratis"
    >
      <span class="relative z-10 flex items-center justify-center space-x-3">
        <span class="text-lg text-balance">Apuntate a la lista VIP</span>
        <!-- SVG simplificado para flecha -->
        <svg
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          class="group-hover:translate-x-1 transition-transform duration-300"
        >
          <path d="M5 12h14M13 6l6 6-6 6"></path>
        </svg>
      </span>
    </button>
  </div>

  <!-- Post-CTA Section - Ultra Optimizado -->
  <div id="post-cta-section" class="w-full">
    <!-- Section Divider Simplificado -->
    <div class="flex items-center justify-center mb-10">
      <div class="h-px bg-gradient-to-r from-transparent via-white/20 to-transparent w-full max-w-xs"></div>
      <h2 class="px-4 text-xs text-gray-500 uppercase tracking-wider font-medium whitespace-nowrap text-balance">
        Incluido en tu acceso
      </h2>
      <div class="h-px bg-gradient-to-r from-transparent via-white/20 to-transparent w-full max-w-xs"></div>
    </div>

    <!-- Benefits Grid - SVGs Ultra Simplificados -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 mb-10">
      <!-- Benefit 1 - Lightning Fast (SVG simplificado) -->
      <div class="benefit-card">
        <div class="benefit-content">
          <div class="benefit-icon">
            <!-- SVG ultra simplificado - solo 1 path en lugar de múltiples -->
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              class="text-accent-blue"
            >
              <path d="M13 3v7h6l-8 11v-7H5l8-11z"></path>
            </svg>
          </div>
          <div class="benefit-text">
            <h3 class="text-base font-medium text-white mb-2 text-balance">Mejores Indicadores</h3>
            <p class="text-sm text-gray-400 leading-relaxed text-balance">
              Trading Automatizado con herramientas institucionales
            </p>
          </div>
        </div>
      </div>

      <!-- Benefit 2 - Trending Up (SVG simplificado) -->
      <div class="benefit-card">
        <div class="benefit-content">
          <div class="benefit-icon">
            <!-- SVG ultra simplificado - solo 2 paths en lugar de múltiples -->
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              class="text-accent-green"
            >
              <path d="M3 17l6-6 4 4 8-8"></path>
              <path d="M14 7h7v7"></path>
            </svg>
          </div>
          <div class="benefit-text">
            <h3 class="text-base font-medium text-white mb-2 text-balance">Arbitrage Crypto</h3>
            <p class="text-sm text-gray-400 leading-relaxed text-balance">Estrategias Avanzadas de Wall Street</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Advanced Features Info - Simplificado -->
    <div class="advanced-features-info">
      <div class="info-content">
        <div class="flex items-center justify-center space-x-3 mb-3">
          <div class="info-dot"></div>
          <span class="text-sm text-gray-300 font-medium text-balance">Acceso inmediato sin tarjeta de crédito</span>
          <div class="info-dot"></div>
        </div>
        <p class="text-xs text-gray-400 text-balance">
          Únete a <span class="text-accent-green font-semibold">2,847+ traders</span> que ya están generando ganancias
        </p>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript Ultra Optimizado - Sin dependencias externas -->
<script>
  // Sistema de animaciones ultra simplificado
  document.addEventListener("DOMContentLoaded", () => {
    // Aplicar estilos inmediatamente para evitar FOUC
    const heroSection = document.querySelector(".hero-cta") as HTMLElement;
    if (heroSection) {
      heroSection.style.opacity = "1";
      heroSection.style.transform = "translateY(0)";
    }

    // Handler único para CTA principal
    const primaryCTA = document.querySelector('[data-cta="primary"]');
    if (primaryCTA) {
      primaryCTA.addEventListener("click", () => {
        // Analytics optimizado
        if (typeof (window as any).gtag !== "undefined") {
          (window as any).gtag("event", "cta_click", {
            event_category: "engagement",
            event_label: "primary_cta",
            value: 1,
          });
        }

        // Scroll suave al formulario de contacto
        const contactSection = document.getElementById("contact");
        if (contactSection) {
          contactSection.scrollIntoView({
            behavior: "smooth",
            block: "start",
          });
        }
      });
    }

    // Lazy loading simplificado usando requestIdleCallback
    if ("requestIdleCallback" in window) {
      window.requestIdleCallback(() => {
        // Animación escalonada solo si es necesario
        const cards = document.querySelectorAll(".feature-card, .benefit-card");
        cards.forEach((card, index) => {
          setTimeout(() => {
            (card as HTMLElement).style.opacity = "1";
            (card as HTMLElement).style.transform = "translateY(0)";
          }, index * 50); // Reducido de 100ms a 50ms
        });
      });
    }
  });
</script>

<style>
  /* Estilos Ultra Optimizados - Mínima complejidad */
  .feature-card {
    @apply bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-5 transition-all duration-300;
    opacity: 1;
    will-change: transform, opacity;
  }

  .feature-content {
    @apply flex items-center space-x-4;
  }

  .feature-icon {
    @apply w-12 h-12 bg-gradient-to-br from-primary-700 to-primary-600 rounded-xl flex items-center justify-center flex-shrink-0;
    contain: layout style paint; /* Optimización de rendering */
  }

  .feature-text {
    @apply flex-1;
  }

  /* Benefit Cards - Ultra Simplificado */
  .benefit-card {
    @apply bg-gradient-to-br from-primary-800/30 to-primary-700/30 backdrop-blur-sm border border-white/10 rounded-2xl p-6 transition-all duration-300;
    opacity: 1;
    will-change: transform, opacity;
  }

  .benefit-content {
    @apply flex items-start space-x-4;
  }

  .benefit-icon {
    @apply w-12 h-12 bg-gradient-to-br from-accent-blue/20 to-accent-green/20 border border-accent-blue/30 rounded-xl flex items-center justify-center flex-shrink-0 mt-1;
    contain: layout style paint; /* Optimización de rendering */
  }

  .benefit-text {
    @apply flex-1;
  }

  /* Advanced Features Info */
  .advanced-features-info {
    @apply w-full;
    opacity: 1;
  }

  .info-content {
    @apply bg-gradient-to-r from-primary-800/20 via-primary-700/30 to-primary-800/20 backdrop-blur-sm border border-white/10 rounded-2xl p-6 text-center;
  }

  .info-dot {
    @apply w-2 h-2 bg-accent-green rounded-full animate-pulse flex-shrink-0;
  }

  /* CTA Button con mínimas optimizaciones */
  .cta-primary {
    position: relative;
    overflow: hidden;
    will-change: transform;
  }

  .cta-primary::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.4s ease-out;
  }

  .cta-primary:hover::before {
    left: 100%;
  }

  /* Text Balance Support - Mejora tipográfica */
  .text-balance {
    text-wrap: balance;
  }

  /* Fallback para navegadores que no soporten text-wrap */
  @supports not (text-wrap: balance) {
    .text-balance {
      text-align: left;
      hyphens: auto;
      word-break: break-word;
    }
  }

  /* Responsive optimizado - menos breakpoints */
  @media (max-width: 640px) {
    .hero-cta {
      @apply max-w-sm;
    }

    .feature-content,
    .benefit-content {
      @apply space-x-3;
    }

    .feature-icon,
    .benefit-icon {
      @apply w-10 h-10;
    }

    .feature-text h3,
    .benefit-text h3 {
      @apply text-xs;
    }

    .feature-text p,
    .benefit-text p {
      @apply text-xs;
    }

    .grid {
      @apply gap-6;
    }

    /* Mejor tipografía en móvil */
    .text-balance {
      line-height: 1.4;
      word-spacing: 0.1em;
    }
  }

  /* Enhanced spacing optimizado */
  #pre-cta-section {
    margin-bottom: 3rem;
  }

  #post-cta-section {
    margin-top: 3rem;
  }

  @media (min-width: 640px) {
    #pre-cta-section {
      margin-bottom: 4rem;
    }

    #post-cta-section {
      margin-top: 4rem;
    }
  }
</style>
